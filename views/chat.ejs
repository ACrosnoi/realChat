
<% if (user) { %>
    <a href="/" class="return">Back to Friends</a></p>

<% } else { %>
    <p><a href="/login">Login</a> or <a href="/register">Register</a> to chat</p>
<% } %>

<ul class="chatUL">
    <% chat.messages.forEach(chats => { %>
        <% if (chats[0] === user.email) { %>
            <strong class="main" id="chatNameL"><%= user.name %></strong>
            <p class="main" id="chat-messages"><%= chats[1].text %></p>
        <% } else { %>
            <strong class="friend" id="chatNameA"><%= chats[0] %></strong>
            <p class="friend" id="chat-messages"><%= chats[1].text %></p>
        <% } %>
    <% }) %>

    <form action="/add" method="POST" class="addForm">
        <textarea name="text" placeholder="Write a message..." required></textarea>
        <button type="submit">Post</button>
    </form>
</ul>